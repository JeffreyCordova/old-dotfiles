#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	~/.config/rofi/launchers/type-2/launcher.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s)
	bspc node -t {tiled,pseudo_tiled,floating}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
#super + {_,shift + }{h,j,k,l}
#	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
#super + {_,shift + }c
#	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
#super + bracket{left,right}
#	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
#super + {_,shift + }{1-9,0}
#	bspc {desktop -f,node -d} '^{1-9,10}'


#   --------
#---[custom]--------------------------------------------------------------------
#   --------

#---[state/flags]

# toggle fullscreen
super + f
    bspc node -t '~fullscreen'


#---[focus/swap]--------------------------------

# focus the next/previous node in the current desktop
super + {j,k}
    bspc node -f {next,prev}.local

# focus the next/previous monitor
super + {h,l}
    bspc monitor -f {prev,next}

# swap the current desktop with the active desktop of the prev/next monitor,
# then reorder desktops
super + shift + {h,l}
    bspc desktop -s $(bspc query -D -d {prev,next}.active); \
    bspc monitor -o $(bspc query -D -m --names | sort); \
    bspc monitor {prev,next} -o

# if the given desktop:
#   does not exist -> create on current monitor and focus
#   is focused -> do nothing
#   is hidden -> activate
#   is active -> 
super + {1-9,0}
    desk={1-9,0}; \
    if [ $(bspc query -D --names | grep $desk) ]; then \
        bspc desktop -f $desk; \
    else \
        bspc monitor -a $desk; \
        bspc monitor -o $(bspc query -D -m --names | sort); \
    fi

# send node to the given desktop
super + shift + {1-9,0}
    bspc node -d {1-9,0}


#---[special keys]----------------------------------------------------------------

# Fn + Space
#XF86WakeUp

# F1 - toggle mute audio
XF86AudioMute
#    pulseaudio-ctl mute
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

# F2/F3 - volume down/up
XF86Audio{Lower,Raise}Volume
#    pulseaudio-ctl {down,up}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ {5%-,5%+}

# F4 - toggle mute mic
XF86AudioMicMute
#    pulseaudio-ctl mute-input
    wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# F5/F6 - brightness down/up
{XF86MonBrightnessDown,XF86MonBrightnessUp}
#    brightnessctl -e set {5%-,+5%}
    light -s sysfs/backlight/nvidia_wmi_ec_backlight {-U 10,-A 10}

# F7 - project?
#XF86Display

# F8 - toggle enable/disable wifi
#XF86WLAN

# F9 - settings?
#XF86Tools

# F10 - search?
#XF86Search

# F11 - ?
#XF86LaunchA

# F12 - ?
#XF86Explorer

